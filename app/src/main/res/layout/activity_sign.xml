<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.Sign"
    android:background="#EFEBEB">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="332dp"
        android:layout_height="201dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="-44dp"
        android:layout_marginEnd="-102dp"
        android:layout_marginBottom="574dp"
        app:srcCompat="@drawable/design2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="398dp"
        app:srcCompat="@drawable/signlogo" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="115dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="287dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/jf_flat"
        android:text="تسجيل دخول "
        android:textAlignment="center"
        android:textColor="#FDFBFB"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="270dp"
        android:layout_height="50sp"
        android:layout_below="@+id/sign"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/custom_input"
        android:hint="البريد الاكتروني"
        android:inputType="textEmailAddress"
        android:paddingEnd="15dp"
        android:paddingRight="3dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="270dp"
        android:layout_height="50sp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/custom_input"
        android:hint="الرقم السري"
        android:inputType="textPassword"
        android:paddingEnd="15dp"
        android:paddingRight="3dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/pass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="227dp"
        android:background="@drawable/custom_button2"
        android:text="تسجيل"
        android:textColor="@color/QRCodeWhiteColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="526dp"
        android:layout_marginEnd="72dp"
        android:text="نسيت كلمة السر ؟"
        android:textAlignment="viewEnd"
        android:textColor="#707070"
        android:textSize="14sp" />


</RelativeLayout>