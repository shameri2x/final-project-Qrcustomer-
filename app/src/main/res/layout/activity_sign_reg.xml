<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignReg"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="498dp"
        app:srcCompat="@drawable/sign" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="347dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="341dp"
        android:layout_marginEnd="-31dp"
        android:fontFamily="@font/jf_flat"
        android:text="  سجل دخولك"
        android:textAlignment="center"
        android:textColor="#FFFBFB"
        android:textSize="46dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="427dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="-16dp"
        android:fontFamily="@font/jf_flat"
        android:text="    أحسن تطبيق للحجوزات المسبقة"
        android:paddingLeft="15dp"
        android:textAlignment="center"
        android:textColor="#FFFBFB"
        android:textSize="22sp" />

    <Button
        android:id="@+id/create"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/custom_button2"
        android:text="تسجيل جديد"
        android:textColor="@color/QRCodeWhiteColor"
        android:textSize="24sp" />

    <Button
        android:id="@+id/sign"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="24sp"
        android:background="@drawable/custom_button"
        android:text="تسجيل دخول"
        android:textColor="@color/QRCodeWhiteColor"
        android:textSize="24sp" />


</RelativeLayout>